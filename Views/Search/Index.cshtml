
@model IEnumerable<ClothesWebNET.Models.Product>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Styles.Render("~/Content/main")
@Styles.Render("~/Content/cart")
@Styles.Render("~/Content/product")

<div class="container">

    <div style="margin-top:150px;" class="grid">
        <div class="cart">
            <div class="cart-heading">
                <h2>Tìm kiếm</h2>
                <h3>Có <span class="count-cart">@Enumerable.Count(ViewBag.List) kết quả</span> tìm kiếm phù hợp</h3>
            </div>
            <div class="products">
                @{
                    if (Enumerable.Count(ViewBag.List) > 0)
                    {

                        <div class="product-heading">Tất cả kết quả tìm kiếm phù hợp</div>

                    }

                    else
                    {
                        <div class="product-heading">Không có kết quả tìm kiếm phù hợp</div>
                        <div style="height:210px" class="grid__row"></div>
                    }

                }

                <div class="grid__row">
                    @foreach (var item in Model)
                    {
                        <div class="grid__col-3">
                            <div class="product">
                                <h1 style="display:none" id="idProduct">@item.idProduct</h1>
                                <img src="@item.ImageProducts.First().URLImage"
                                     alt=""
                                     class="product-img product-show" />
                                <img src="@item.ImageProducts.Last().URLImage"
                                     alt=""
                                     class="product-img product-img-hover" />
                            </div>
                            <div class="product-info">
                                <div class="product-title">
                                    @item.nameProduct
                                </div>
                                <div class="product-price">@item.price,000₫</div>
                            </div>
                        </div>
                    }

                </div>

            </div>
        </div>
    </div>


    <!-- Product end -->

</div>


@Scripts.Render("~/bundles/product")


